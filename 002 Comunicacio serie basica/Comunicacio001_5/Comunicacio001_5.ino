void setup() {
Serial.begin(9600);
}
void loop() 
{
  for(int i = 0; i < 360; i += 5) {
    y1 = 1 * sin(i*M_PI / 180);
    y2 = 2 * sin((i+90)*M_PI/180);
    y3 = 5 * sin((i+180)*M_PI/180);
  
Serial.print(y1);
Serial.print("\t");
Serial.print(y2);
Serial.print("\t");
Serial.println(y3);
Serial.println(y1 = y1 + 5);

delay(100);
              }
} 
